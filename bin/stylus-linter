#!/usr/bin/env node

'use strict'

const yargs = require( 'yargs' )
const stylusLinter = require( '../' )


const options = yargs
	.usage( 'Usage: $0 file' )
	.version(require( '../package' ).version)
	.alias( 'version', 'v' )
	.help( 'help' )
	.alias( 'help', 'h' )
	.alias( 'help', '?' )
	.example( '$0 file', 'Run Stylus Linter on .styl-file' )
	.epilogue( 'MIT' )
	.argv;

stylusLinter(options._[0]);
